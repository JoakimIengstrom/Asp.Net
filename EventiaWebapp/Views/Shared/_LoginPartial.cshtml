@using Microsoft.AspNetCore.Identity
@inject SignInManager<EventiaUser> SignInManager

@if (SignInManager.IsSignedIn(User)) 
{
    <a class="btn btn-secondary" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
    <a class="btn btn-secondary" asp-area="Identity" asp-page="/Account/Manage/Index">Account</a>
}
else
{
    <a class="btn btn-secondary" asp-area="Identity" asp-page="/Account/Login">Login</a>
    <a class="btn btn-secondary" asp-area="Identity" asp-page="/Account/Register">Register</a>
}

